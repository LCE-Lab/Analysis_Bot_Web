{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "type:dependencies"
  ],
  "schedule": [
    "after 11pm every weekend",
    "before 8am every weekend"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": false,
      "addLabels": [
        "confidence:{{confidence}}"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "addLabels": [
        "confidence:{{confidence}}",
        "requires-major-review"
      ]
    },
    {
      "groupName": "eslint packages",
      "matchPackageNames": [
        "/.*eslint.*/"
      ]
    },
    {
      "groupName": "definitelyTyped packages",
      "matchPackageNames": [
        "@types/**"
      ]
    },
    {
      "matchManagers": [
        "npm"
      ],
      "addLabels": [
        "package:npm"
      ]
    },
    {
      "groupName": "GitHub Actions",
      "matchManagers": [
        "github-actions"
      ],
      "addLabels": [
        "package:github-actions"
      ]
    },
    {
      "groupName": "Dockerfile",
      "matchManagers": [
        "docker"
      ],
      "addLabels": [
        "package:docker"
      ]
    }
  ]
}
