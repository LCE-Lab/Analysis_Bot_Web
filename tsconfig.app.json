{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/types/*.d.ts", "src/**/*", "src/**/*.vue", "cfg/settings.d.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["unplugin-vue-router/client", "vite-plugin-vue-layouts-next/client"]
  }
}
